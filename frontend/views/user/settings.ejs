<%- include('../partials/head.ejs') %>  
<title>Změna údajů</title>
<meta name="robots" content="noindex" />
</head>

<body>
    <%- include('../partials/home_navbar.ejs', {user: user}) %>
    <div class="flex items-center justify-center">
        <div class="flex flex-col self-center w-full sm:w-8/12 mb-6">
            <p class="text-[30px] font-bold"> Uživatel <%= locals.user.name %> </p>
            <br>
            <p class="text-[25px]"> Změna údajů </p>
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg place-self-start w-full sm:w-1/2 my-3 min-w-fit p-2">
                <form action="settings" method="post" autocomplete="false"> 
                    <div class="mb-6">
                        <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">In-game nick</label>
                        <input autocomplete="new-password" type="text" name="new_name" placeholder="Tvůj nick v Clash Royale" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light">
                    </div>
                    <div class="mb-6">
                        <label for="email_val" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Nový e-mail</label>
                        <input autocomplete="new-password" type="email" name="new_email" placeholder="email@web.com" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light">
                    </div>
                    <div class="mb-6">
                        <label for="discord" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Tvůj Discord tag</label>
                        <input autocomplete="new-password" type="text" name="new_discord" placeholder="jmeno#1234" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light">
                    </div>
                    <div class="mb-6">
                        <label for="password_val" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Nové heslo</label>
                        <input autocomplete="new-password" type="password" name="new_password" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light">
                    </div>
                    <button type="submit" class="text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Změnit údaje</button>
                </form>
                <% if (locals.messages) {locals.messages.forEach((message) => { %>
                    <%- include('../partials/messages.ejs', {message: message, type: locals.type}) %>
                <% });} %>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/footer_absolute.ejs') %>