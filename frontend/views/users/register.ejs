    <%- include('../partials/head.ejs') %>  
        <title>Založení účtu</title>
        <meta name="description" content="Zaregistrujte se a účastněte turnajů jak v e-sportech tak sportech!">
    </head>


  <body class="flex flex-col h-screen bg-white min-h-full">
    <%- include('../partials/home_navbar.ejs', {user: null}) %>
    <div class="w-full bg-grey-500">
        <div class="container mx-auto py-8">
            <div class="w-96 mx-auto bg-white rounded shadow">
                <div class="mx-16 py-4 px-8 text-black text-xl font-bold border-b border-grey-500 text-center">Registrace</div>
                <div id="register" class="">
                    <form action="/users/register" method="post" class="flex flex-col items-center justify-center"> 
                        <div class="py-2 px-4">
                            <label class="block text-grey-darker text-sm font-bold mb-2">Tvoje in-game jméno</label>
                            <input type="text" name="name" id="register_name" class="items-center justify-center" placeholder="Jméno" value="<%= typeof name != 'undefined' ? name : '' %>">
                        </div>
                        <div class="py-2 px-4">
                            <label class="block text-grey-darker text-sm font-bold mb-2">Tvůj e-mail</label>
                            <input type="email" name="email" id="register_email" class="items-center justify-center" placeholder="E-mail" value="<%= typeof email != 'undefined' ? name : '' %>">
                        </div>
                        <div class="py-2 px-4">
                            <label class="block text-grey-darker text-sm font-bold mb-2">Tvoje heslo</label>
                            <input type="password" name="password" id="register_pass" class="items-center justify-center" placeholder="Heslo" value="<%= typeof name != 'undefined' ? name : '' %>">
                        </div>
                        <div class="py-2 px-4">
                            <label class="block text-grey-darker text-sm font-bold mb-2">Tvoje heslo znovu</label>
                            <input type="password" name="password2" id="register_pass_check" class="items-center justify-center" placeholder="Heslo znovu" value="<%= typeof name != 'undefined' ? name : '' %>">
                        </div>
                        <div class="py-2 px-4 items-center">
                            <button type="submit" id="register button" class="mb-2 mx-16 rounded-full py-1 px-24 text-center font-bold bg-gradient-to-r text-white from-red-600 to-gray-800  hover:from-gray-800 hover:to-red-600">REGISTROVAT</button> <br>
                            <p class="text-center"><a class="link" href="/login">Přihlásit se</a></p>
                        </div>
                        <div class="bg-sky-300 rounded-lg py-2 px-4 mb-2 text-base text-blue-800 border border-sky-900 text-center"> Pro dokončení registrace je potřeba potvrdit účet v e-mailu </div>
                        <% if (locals.messages && locals.messages.length > 0) {locals.messages.forEach(message => { %>
                            <%- include("../partials/messages", {message: message, type: locals.type}) %>
                        <% }); } %>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
  </body>
</html>

<%- include('../partials/footer.ejs') %>