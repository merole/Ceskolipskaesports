<!-- Included -->
<% let player = locals.user.name == locals.match.player1 ? 1 : 2; if ((player == 1 && locals.match.comment1 == null) || (player == 2 && locals.match.comment2 == null) ) { %>
    <div class="flex-col p-2 border-2 border-slate-900 rounded-md w-11/12">
        <form action="/cr/upload" method="post" enctype="multipart/form-data">
            <div class="flex mb-4">
                <div class="w-1/3 h-12 bg-red-500">
                    <p > Hráč 1 </p>
                </div>
                <div class="w-1/3 h-12 flex-col bg-red-500">
                    <p> Čas dohrání</p>
                </div>
                <div class="w-1/3 h-12 bg-red-500">
                    <p > Hráč 2 </p>
                </div>
            </div>
            <div class="flex mb-4">
                <div class="w-1/3 h-12 bg-red-500">
                    <p > <%= locals.match.player1 %> </p>
                </div>
                <div class="w-1/3 h-12 flex-col bg-red-500">
                    <p> <%= locals.match.maxDate %> </p>
                </div>
                <div class="w-1/3 h-12 bg-red-500">
                    <p > <%= locals.match.player2 %> </p>
                </div>
            </div>
            <div class="flex mb-4">
                <div class="w-1/3 h-12 bg-red-500">
                    <input type="file" name="img" accept="image/*" placeholder="Nahrát obrázek" required> 
                </div>
                <div class="w-1/3 h-12 flex-col bg-red-500">
                    <input type="text" name="comment"> Přidat komentář </p>
                </div>
                <div class="w-1/6 h-12 bg-red-500">
                    <button name="win" type="submit"> Prohlásit vítězství </button>
                </div>
                <div class="w-1/6 h-12 bg-red-500">
                    <button type="submit"> Prohlásit prohru </button>
                </div>
            </div>
            <input class="hidden" name="user" value="<%= locals.user.name %>"></input>
            <input class="hidden" name="id" value="<%= locals.match._id %>"></input>
        </form>
    </div>
<% } %>