<div class="flex-col p-2 border-2 border-slate-900 rounded-md w-11/12">
    <div class="flex mb-4">
        <div class="items-center w-1/2 bg-gray-50">
            <p class="text-[30px] text-center"> <%= match.player1 %> </p> 
        </div>
        <div class="items-center w-1/2 bg-gray-50">
            <p class="text-[30px] text-center"> <%= match.player2 %> </p> 
        </div>
    </div>
    <div class="flex mb-4">
        <div class="flex items-center justify-center w-1/2 bg-gray-50">
            <% if(match.img1.data) { %>
                <img src="data:image/<%=match.img1.contentType%>;base64, <%=match.img1.data.toString('base64')%>" class="object-center">
            <% } else { %> 
                <p class="text-[5vw]"> NO IMAGE FOR P1 </p>
            <% } %>
        </div>
        <div class="flex items-center justify-center w-1/2 bg-gray-50">
            <% if(match.img2.data) { %>
                <img src="data:image/<%=match.img2.contentType%>;base64, <%=match.img2.data.toString('base64')%>">
            <% } else { %> 
                <p class="text-[5vw]"> NO IMAGE FOR P2 </p>
            <% } %>
        </div>
    </div>
    <div class="flex mb-4">
        <div class="flex items-center w-1/2 bg-gray-50">
            <p class="text-sm text-center"> <%= match.comment1 %> </p> 
        </div>
        <div class="flex items-center w-1/2 bg-gray-50">
            <p class="text-sm text-center"> <%= match.comment2 %> </p> 
        </div>
    </div>
    <div class="flex mb-4">
        <div class="flex items-center justify-center w-full bg-gray-50">
            <input name="admin_comment" type="text" placeholder="Komentář admina" class="self-center w-7/12">
        </div>
    </div>
    <div class="flex mb-4">
        <div class="flex items-center justify-center w-1/2 bg-gray-50">
            <button type="submit" name="win_1" type="button" class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Prohlásit vítěze</button>
        </div>
        <div class="flex items-center justify-center w-1/2 bg-gray-50">
            <button type="submit" name="win_2" type="button" class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Prohlásit vítěze</button>
        </div>
    </div>
</div>